{
  "gopls": {
    "build.buildFlags": ["-tags", "wireinject"]
  },
  "editor.tabSize": 2,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true, // for prettier
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit" // for eslint
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "i18n-ally.localesPaths": ["./frontend/src/i18n/locales"],
  "i18n-ally.keystyle": "nested"
}
